{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard",
        "eslint:recommended",
        "plugin:prettier/recommended",
        "prettier"
    ],
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module",
        "requireConfigFile": false
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "prettier/prettier": "warn",
        "react/jsx-filename-extension": [
            "warn",
            {"extensions": [".js", ".jsx"]}
        ],
        "import/prefer-default-export": "off",
        "jsx-quotes": ["warn", "prefer-single"]
    }
}
